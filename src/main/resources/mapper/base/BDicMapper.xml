<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cashbang.core.modules.venuesbook.dao.BDicMapper">
	
	<select id="listForPage" resultType="cn.cashbang.core.modules.venuesbook.entity.BDicEntity">
		SELECT
			`id`, 
			`code`, 
			`name`, 
			`typecode`, 
			`typename`, 
			`status`
		FROM
			b_dic
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO b_dic (
			`id`, 
			`code`, 
			`name`, 
			`typecode`, 
			`typename`, 
			`status`
		)
		VALUES (
			#{id}, 
			#{code}, 
			#{name}, 
			#{typecode}, 
			#{typename}, 
			#{status}
		)
	</insert>
	
	<select id="getObjectById" resultType="cn.cashbang.core.modules.venuesbook.entity.BDicEntity">
		SELECT
			`id`, 
			`code`, 
			`name`, 
			`typecode`, 
			`typename`, 
			`status`
		FROM
			b_dic
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE b_dic
	 	<set>
			<if test="code != null">`code` = #{code}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="typecode != null">`typecode` = #{typecode}, </if>
			<if test="typename != null">`typename` = #{typename}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			b_dic
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>
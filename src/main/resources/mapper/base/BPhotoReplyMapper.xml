<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cashbang.core.modules.venuesbook.dao.BPhotoReplyMapper">
	
	<select id="listForPage" resultType="cn.cashbang.core.modules.venuesbook.entity.BPhotoReplyEntity">
		SELECT
			bpr.`reply`, 
			bpr.`photo_id`, 
			 (select bpi.`content` from b_photo_info bpi where bpi.pid = bpr.photo_id) as photoContent,
			bpr.`uid`, 
			 (select uname from b_user bu where bu.uid = bpr.`uid`) as uname,
			bpr.`content`, 
			bpr.`create_time`, 
			bpr.`update_time`
		FROM
			b_photo_reply bpr
			<where>
			<if test="reply != null and reply != ''">
				and	bpr.`photo_id` = #{reply} 
			</if>
			</where>
		ORDER BY
			bpr.create_time DESC
	</select>
	
	<insert id="save">
		INSERT INTO b_photo_reply (
			`reply`, 
			`photo_id`, 
			`uid`, 
			`content`, 
			`create_time`, 
			`update_time`
		)
		VALUES (
			#{reply}, 
			#{photoId}, 
			#{uid}, 
			#{content}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="cn.cashbang.core.modules.venuesbook.entity.BPhotoReplyEntity">
		SELECT
			`reply`, 
			`photo_id`, 
			`uid`, 
			`content`, 
			`create_time`, 
			`update_time`
		FROM
			b_photo_reply
		WHERE
			reply = #{reply}
	</select>
	
	<update id="update">
		UPDATE b_photo_reply
	 	<set>
			<if test="photoId != null">`photo_id` = #{photoId}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE
			reply = #{reply}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			b_photo_reply
		WHERE
			reply IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>
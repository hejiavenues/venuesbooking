<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cashbang.core.modules.venuesbook.dao.BConvenerInfoMapper">
	
	<select id="listForPage" resultType="cn.cashbang.core.modules.venuesbook.entity.BConvenerInfoEntity">
		SELECT
			`uid`, 
			`activity_id`, 
			`idcard_front_url`, 
			`idcard_back_url`, 
			`status`, 
			`create_time`, 
			`update_time`
		FROM
			b_convener_info
		ORDER BY
			uid DESC
	</select>
	
	<insert id="save">
		INSERT INTO b_convener_info (
			`uid`, 
			`activity_id`, 
			`idcard_front_url`, 
			`idcard_back_url`, 
			`status`, 
			`create_time`, 
			`update_time`
		)
		VALUES (
			#{uid}, 
			#{activityId}, 
			#{idcardFrontUrl}, 
			#{idcardBackUrl}, 
			#{status}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="cn.cashbang.core.modules.venuesbook.entity.BConvenerInfoEntity">
		SELECT
			`uid`, 
			`activity_id`, 
			`idcard_front_url`, 
			`idcard_back_url`, 
			`status`, 
			`create_time`, 
			`update_time`
		FROM
			b_convener_info
		WHERE
			uid = #{uid}
	</select>
	
	<update id="update">
		UPDATE b_convener_info
	 	<set>
			<if test="activityId != null">`activity_id` = #{activityId}, </if>
			<if test="idcardFrontUrl != null">`idcard_front_url` = #{idcardFrontUrl}, </if>
			<if test="idcardBackUrl != null">`idcard_back_url` = #{idcardBackUrl}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE
			uid = #{uid}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			b_convener_info
		WHERE
			uid IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>